{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [true, "single"],
        "semicolon": [true, "never"],
        "member-access": [true, "no-public"],
        "no-console": false
    },
    "linterOptions": {
        "exclude": [
          "node_modules/**/*.ts"
        ]
      }
}